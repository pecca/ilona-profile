# Apache .htaccess file to prevent search engine indexing
# Add additional headers to block crawlers

<IfModule mod_headers.c>
    # Set X-Robots-Tag header for all files
    Header set X-Robots-Tag "noindex, nofollow, noarchive, nosnippet, noimageindex"
</IfModule>

# Prevent access to sensitive files
<Files "robots.txt">
    # Allow robots.txt to be accessible
</Files>

# Block common crawler user agents (optional extra protection)
<IfModule mod_rewrite.c>
    RewriteEngine On
    RewriteCond %{HTTP_USER_AGENT} (googlebot|bingbot|slurp|duckduckbot|baiduspider|yandexbot|facebookexternalhit|twitterbot) [NC]
    RewriteRule .* - [R=403,L]
</IfModule>